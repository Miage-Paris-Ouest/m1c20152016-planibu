<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="#f27d00">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/salle"
            android:layout_marginLeft="@dimen/single_item_margin"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/etagere"
            android:layout_marginLeft="@dimen/single_item_margin" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/discipline"
            android:layout_marginLeft="@dimen/single_item_margin" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:id="@+id/sous_discipline"
            android:layout_marginLeft="@dimen/single_item_margin" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/cote"
            android:layout_marginRight="@dimen/single_item_margin"
            android:password="false" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView" />
    </LinearLayout>

</ScrollView>