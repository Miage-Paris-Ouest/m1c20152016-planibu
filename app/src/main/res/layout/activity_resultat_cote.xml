<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leys.m1c20152016_planibu.menu_principal_choix.recherche_cote.CsvResultActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontalScrollView2"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2"
            android:fillViewport="false"
            android:layout_alignBottom="@+id/relativeLayout">

            <ListView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/listViewCSV"


                android:layout_below="@+id/csv_title_liste"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:foregroundGravity="center" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/plansh2"

            android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>
