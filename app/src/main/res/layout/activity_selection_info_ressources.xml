<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

    </TableLayout>

    <TextView
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/infores_titre"
        android:id="@+id/info_tv_titre"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_weight="0.16"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infores_titre2"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="322dp"
        android:layout_height="70dp"
        android:text="@string/infores_desc2"
        android:id="@+id/textView3"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infores_titre3"
        android:id="@+id/infores_textview_titre3"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="312dp"
        android:layout_height="70dp"
        android:text="@string/infores_desc3"
        android:id="@+id/textView6"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infores_titre4"
        android:id="@+id/textView7"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:text="@string/infores_desc4"
        android:id="@+id/infores_textview_desc4"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infores_desc5"
        android:id="@+id/infores_textview_desc5"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infores_titre5"
        android:id="@+id/infores_textview_titre5"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/horaires_titre_acces"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:typeface="serif"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/tableLayout"
        android:layout_gravity="center_horizontal" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:id="@+id/imageView4"
            android:src="@drawable/plan_acces"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horaires_acces_desc"
            android:id="@+id/textView"
            android:layout_below="@+id/horaires_textView_titre_acces"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal" />

    </TableRow>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />

</LinearLayout>
    </ScrollView>